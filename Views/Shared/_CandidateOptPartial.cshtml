@model JobFairManagementSystem.Data.ApplicationUser

<ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
        <a asp-controller="Candidate" asp-action="Home" class="nav-link @(ViewBag.active == 0 ? "active": "link-body-emphasis")">
            <i class="bi bi-house me-2"></i>Home
        </a>
    </li>
    <li>
        <a asp-controller="Candidate" asp-action="Update" asp-route-id="@Model.Id" class="nav-link @(ViewBag.active == 2 ? "active": "link-body-emphasis")">
            <i class="bi bi-building-check me-2"></i>Update Profile
        </a>
    </li>
    <li>
        <a asp-controller="Candidate" asp-action="ListCompanies" class="nav-link @(ViewBag.active == 3 ? "active": "link-body-emphasis")">
            <i class="bi bi-person-check me-2"></i>Apply For Companies
        </a>
    </li>
    <li>
        <a asp-controller="Candidate" asp-action="CreateSchedule" asp-route-id="@Model.Id" class="nav-link @(ViewBag.active == 4 ? "active": "link-body-emphasis")">
            <i class="bi bi-columns-gap me-2"></i>Create Project Schedule
        </a>
    </li>
    <li>
        <a asp-controller="Company" asp-action="ShowFeedback" class="nav-link @(ViewBag.active == 7 ? "active": "link-body-emphasis")">
            <i class="bi bi-ui-checks me-2"></i>Show My Feedback
        </a>
    </li>
    <li>
        <a asp-controller="Company" asp-action="GiveFeedback" class="nav-link @(ViewBag.active == 8 ? "active": "link-body-emphasis")">
            <i class="bi bi-pencil-square me-2"></i>Give Feedback
        </a>
    </li>
    <li>
        <a asp-controller="Candidate" asp-action="ShowNotifications" class="nav-link @(ViewBag.active == 10 ? "active" : "link-body-emphasis")">
            <i class="bi bi-bell me-2"></i>Notifications
            
            <span class="badge text-bg-danger rounded-pill ms-2">@Model.Notifications.FindAll(n => !n.IsRead).Count</span>
        </a>
    </li>
</ul>