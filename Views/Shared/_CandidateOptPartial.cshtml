@model JobFairManagementSystem.Data.ApplicationUser

<ul class="nav nav-pills flex-column mb-auto">
    <li class="nav-item">
        <a asp-controller="Candidate" asp-action="Home" class="nav-link @(ViewBag.active == 0 ? "active": "link-body-emphasis")">
            <i class="bi bi-house me-2"></i>Home
        </a>
    </li>
    <li>
        <a asp-controller="Candidate" asp-action="Home" class="nav-link @(ViewBag.active == 1 ? "active": "link-body-emphasis")">
