@model List<JobFairManagementSystem.Data.CompanyUser>

@{
    ViewBag.Title = "Verify";
    Layout = "_SideBarLayout";
    ViewBag.active = 2;
}

<h2>Manage Companies</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var company in Model)
        {
            <tr>
                <td>@company.Name</td>
                <td>@company.Email</td>
                <td>@company.Description</td>
                <td class="@(company.IsVerified ? "text-success" : "text-warning")">@(company.IsVerified ? "Verified" : "Pending Verification")</td>
                <td>
                    <a asp-action="VerifyUser" asp-route-id="@company.Id" asp-route-actionName="VerifyCompanies" class="btn @(company.IsVerified ? "btn-warning" : "btn-success")">@(company.IsVerified ? "Revoke" : "Verify")</a>
                    <a class="btn btn-info">Edit</a>
                    <a class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>