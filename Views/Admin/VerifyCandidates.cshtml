@model List<JobFairManagementSystem.Data.CandidateUser>

@{
    ViewBag.Title = "Verify";
    Layout = "_SideBarLayout";
    ViewBag.active = 3;
}

<h2>Manage Candidates</h2>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Description</th>
            <th scope="col">Status</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var candidate in Model)
        {
            <tr>
                <td>@candidate.Name</td>
                <td>@candidate.Email</td>
                <td>@candidate.Bio</td>
                <td class="@(candidate.IsVerified ? "text-success" : "text-warning")">@(candidate.IsVerified ? "Verified" : "Pending Verification")</td>
                <td>
                    <a asp-action="VerifyUser" asp-route-id="@candidate.Id" asp-route-actionName="VerifyCandidates" class="btn @(candidate.IsVerified ? "btn-danger" : "btn-success")">@(candidate.IsVerified ? "Revoke" : "Verify")</a>
                    <a class="btn btn-info">Edit</a>
                    <a class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>